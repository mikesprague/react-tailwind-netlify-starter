{
  "name": "react-tailwindcss-netlify-starter",
  "version": "0.1.0",
  "description": "My project template for a barebones React/Tailwind CSS PWA front-end hosted on Netlify with an example Netlify function that can be used on the back-end",
  "private": true,
  "engines": {
    "node": ">= 18.x",
    "npm": ">= 8.x"
  },
  "scripts": {
    "build": "vite build && npm run lambda:build",
    "clean": "rm -rf ./build && rm -rf ./lambda",
    "dev": "vite serve --port 3000",
    "lambda:build": "netlify-lambda build ./src/functions",
    "lambda:serve": "netlify-lambda serve ./src/functions --config ./functions.config.js",
    "prebuild": "npm run clean",
    "preview": "vite preview",
    "start": "concurrently 'npm run dev' 'npm run lambda:serve' --names 'ðŸ“¦,ðŸ’»' --prefix '[{name}] ' --kill-others",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "repository": {
    "url": "https://github.com/mikesprague/react-tailwindcss-netlify-starter"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "homepage": "",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/typography": "0.5.10",
    "@tippyjs/react": "4.2.6",
    "axios": "1.6.7",
    "cross-env": "7.0.3",
    "daisyui": "4.6.2",
    "dayjs": "1.11.10",
    "he": "1.2.0",
    "nanoid": "5.0.5",
    "prop-types": "15.8.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "5.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@fullhuman/postcss-purgecss": "5.0.0",
    "@tailwindcss/typography": "0.5.10",
    "@vitejs/plugin-react-swc": "3.6.0",
    "autoprefixer": "10.4.17",
    "concurrently": "8.2.2",
    "cssnano": "6.0.3",
    "cz-git": "1.8.0",
    "dotenv": "16.4.1",
    "netlify-cli": "17.16.1",
    "netlify-lambda": "2.0.16",
    "postcss": "8.4.35",
    "postcss-cli": "11.0.0",
    "sass": "1.70.0",
    "stylelint": "15.11.0",
    "stylelint-config-standard": "34.0.0",
    "stylelint-config-standard-scss": "11.1.0",
    "tailwindcss": "3.4.1",
    "vite": "5.1.1",
    "vite-plugin-html": "3.2.2",
    "vite-plugin-pwa": "0.18.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  }
}
