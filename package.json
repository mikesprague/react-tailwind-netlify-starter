{
  "name": "react-tailwindcss-netlify-starter",
  "version": "0.1.0",
  "description": "My project template for a barebones React/Tailwind CSS PWA front-end hosted on Netlify with an example Netlify function that can be used on the back-end",
  "private": true,
  "engines": {
    "node": ">= 22.x",
    "npm": ">= 10.x"
  },
  "scripts": {
    "build": "vite build && npm run lambda:build",
    "clean": "rm -rf ./build && rm -rf ./lambda",
    "dev": "vite serve --port 3000",
    "lambda:build": "netlify-lambda build ./src/functions",
    "lambda:serve": "netlify-lambda serve ./src/functions --config ./functions.config.js",
    "prebuild": "npm run clean",
    "preview": "vite preview",
    "start": "concurrently 'npm run dev' 'npm run lambda:serve' --names 'ðŸ“¦,ðŸ’»' --prefix '[{name}] ' --kill-others",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "repository": {
    "url": "https://github.com/mikesprague/react-tailwindcss-netlify-starter"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "homepage": "",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/typography": "0.5.16",
    "@tailwindcss/vite": "4.0.8",
    "@tippyjs/react": "4.2.6",
    "cross-env": "7.0.3",
    "daisyui": "5.0.0-beta.8",
    "dayjs": "1.11.13",
    "he": "1.2.0",
    "jotai": "2.12.1",
    "nanoid": "5.1.2",
    "prop-types": "15.8.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-icons": "5.5.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tailwindcss/typography": "0.5.16",
    "@vitejs/plugin-react-swc": "3.8.0",
    "concurrently": "9.1.2",
    "cz-git": "1.11.0",
    "dotenv": "16.4.7",
    "netlify-cli": "18.1.0",
    "netlify-lambda": "2.0.16",
    "stylelint": "16.14.1",
    "stylelint-config-standard": "37.0.0",
    "tailwindcss": "4.0.8",
    "vite": "6.1.1",
    "vite-plugin-html": "3.2.2",
    "vite-plugin-pwa": "0.21.1"
  },
  "browserslist": {
    "production": [">0.2%", "not dead", "not op_mini all"],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "volta": {
    "node": "22.13.1",
    "npm": "10.9.2"
  }
}
